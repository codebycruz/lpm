---
import { Icon } from "astro-icon/components";
import { GITHUB_URL, DISCORD_URL, LICENSE_URL } from "../data/info";

const links = [
	{ label: "Docs", href: "/docs/getting-started/introduction/" },
	{ label: "Discord", href: DISCORD_URL, external: true },
	{ label: "GitHub", href: GITHUB_URL, external: true },
	{ label: "License", href: LICENSE_URL, external: true },
];
---

<footer class="border-t border-black/10 dark:border-white/10 mt-auto">
	<div
		class="max-w-[90em] mx-auto px-4 md:px-8 py-6 flex flex-col md:flex-row items-center gap-4 md:gap-0 justify-between text-sm opacity-60"
	>
		<span>lpm</span>
		<div class="flex flex-wrap justify-center gap-4 md:gap-6">
			{
				links.map((link) => (
					<a
						href={link.href}
						target={link.external ? "_blank" : undefined}
						rel={link.external ? "noopener noreferrer" : undefined}
						class="hover:opacity-100 opacity-70 transition-opacity"
					>
						{link.label}
					</a>
				))
			}
			<a
				href="/rss.xml"
				class="hover:opacity-100 opacity-70 transition-opacity flex items-center gap-1.5"
			>
				<Icon name="simple-icons:rss" class="size-3.5" />
				Blog
			</a>
		</div>
	</div>
</footer>
