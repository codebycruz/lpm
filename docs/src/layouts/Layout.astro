---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import CodeBlocks from "../components/CodeBlocks.tsx";
import "../styles/global.css";

interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<html lang="en" class="overflow-y-scroll">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/lpm-small-text.svg" />
		<link rel="icon" href="/lpm-small-text.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ? `${title} - lpm` : "lpm"}</title>
		<link rel="alternate" type="application/rss+xml" title="lpm blog" href="/rss.xml" />
	</head>
	<body
		class="bg-white dark:bg-gray-950 text-black dark:text-white flex flex-col min-h-screen lg:min-w-fit"
	>
		<Navbar />
		<slot />
		<Footer />
		<CodeBlocks client:only="preact" />
	</body>
</html>
