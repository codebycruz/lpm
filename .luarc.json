{
	"$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
	"diagnostics": {
		"groupSeverity": {
			"unused": "Warning",
			"type-check": "Error",
			"unbalanced": "Error",
			"luadoc": "Error",
			"duplicate": "Error",
			"global": "Error"
		},
		"disable": [
			"duplicate-doc-field",
			"duplicate-doc-field",
			"duplicate-index",
			"duplicate-set-field",
			"duplicate-doc-alias"
		],
		"unusedLocalExclude": ["_*"]
	},
	"runtime": {
		"version": "LuaJIT",
		"path": ["./target/?.lua", "./target/?/init.lua"]
	},
	"workspace": {
		"useGitIgnore": false
	}
}
