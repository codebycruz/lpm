{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": ["name", "version", "dependencies"],
	"properties": {
		"name": {
			"type": "string",
			"description": "Package name"
		},
		"version": {
			"type": "string",
			"pattern": "^\\d+\\.\\d+\\.\\d+$",
			"description": "Semantic version number"
		},
		"dependencies": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"oneOf": [
					{
						"required": ["path"],
						"properties": {
							"path": {
								"type": "string",
								"description": "Local filesystem path to dependency"
							}
						},
						"additionalProperties": false
					},
					{
						"required": ["git"],
						"properties": {
							"git": {
								"type": "string",
								"description": "Git repository URL"
							}
						},
						"additionalProperties": false
					}
				]
			},
			"description": "Package dependencies with source locations"
		}
	},
	"additionalProperties": false
}
